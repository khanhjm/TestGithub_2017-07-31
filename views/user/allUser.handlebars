<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-book"></i>USER FORM</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/">Home</a></li>
            <li><i class="fa fa-book"></i>User</li>
            <li><i class="fa fa-th-list"></i>AllUser</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                User
            </header>
            <div>
                <a class="btn btn-primary" href="/user/add" data-toggle="modal">
                                    Add User
                                </a>
            </div>
            <table class="table table-striped table-advance table-hover table-bordered"">
                <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> Name</th>
                        <th><i class="icon_profile"></i> User Name</th>
                        <th><i class="icon_mail_alt"></i> Email</th>
                        <th><i class="icon_pin_alt"></i> Location</th>
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                    {{#each user }}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{username}}</td>
                        <td>{{email}}</td>
                        <td>{{location}}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-success" href="../user/edit/{{id}}"><i class="icon_pencil"></i></a>
                                <a class="btn btn-danger" href="../user/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>