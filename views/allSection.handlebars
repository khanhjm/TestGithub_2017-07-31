<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-book"></i>SectionForm</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/">Home</a></li>
            <li><i class="fa fa-book"></i>Forms</li>
            <li><i class="fa fa-th-list"></i>Section</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Section
            </header>
            <div>
                <a class="btn btn-primary" href="/add" data-toggle="modal">
                                    AddSection
                                </a>
            </div>
            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> Name</th>
                        <th><i class="icon_calendar"></i> Date Created</th>
                        <th><i class="icon_calendar"></i> Date Updated</th>
                        <th><i class="icon_document"></i> Description</th>
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                    {{#each Section }}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{date_created}}</td>
                        <td>{{date_update}}</td>
                        <td>{{descr}}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-success" href="../Section/edit/{{id}}"><i class="icon_pencil"></i></a>
                                <a class="btn btn-danger" href="../Section/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
</div>
<!-- page end-->